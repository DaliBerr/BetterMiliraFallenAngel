<?xml version="1.0" encoding="utf-8" ?>

<Defs>

  <ThingDef ParentName="BaseMeleeWeapon">
    <defName>BMA_Communicator</defName>
    <label>通讯器</label>
    <description>来自天空之城的通讯器</description>

    <graphicData>
      <texPath>BMA_Communicator</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
    </graphicData>

    <!-- <recipeMaker Inherit="False"></recipeMaker> -->


    <statBases>
      <MarketValue>180</MarketValue>
      <Mass>1.8</Mass>
      <MeleeWeapon_DamageMultiplier>1.0</MeleeWeapon_DamageMultiplier>
      <MeleeWeapon_CooldownMultiplier>1.0</MeleeWeapon_CooldownMultiplier>
    </statBases>

    <tools>
      <li>
        <label>钝击</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>5</power>                <!-- 伤害 -->
        <armorPenetration>0.28</armorPenetration>
        <cooldownTime>2.1</cooldownTime> <!-- 攻击间隔 -->
      </li>
    </tools>

    <smeltable>false</smeltable>
    <recipeMaker>
      <!-- <jobString>正在制造通讯器...</jobString> -->
      <workAmount>75000</workAmount>
      <workSkill>Crafting</workSkill>
      <skillRequirements>
        <Crafting>4</Crafting>
        <Intellectual>6</Intellectual>
      </skillRequirements>
      <recipeUsers>
        <li>TableMachining</li>
        <li>FabricationBench</li>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
    </recipeUsers> 
  </recipeMaker>
    <costList>
        <Steel>60</Steel>
        <ComponentIndustrial>2</ComponentIndustrial>
        <Milira_SunLightFuel>20</Milira_SunLightFuel>
    </costList>

    
    <comps>
      <li Class="BetterFallenAngel.CompProperties_GiveAbilityOnEquip">
        <abilityDef>BMA_Ability_Communicator</abilityDef>
      </li>
    </comps>
  </ThingDef>

</Defs>
